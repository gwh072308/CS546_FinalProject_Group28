{{!-- login page placeholder --}}
<div class="login-container">
    <h1 class="page-title">Login</h1>

    {{#if error}}
    <p class="error-text">{{error}}</p>
    {{/if}}

    <form id="signin-form" method="POST" action="/users/login">

        <label for="username">Username:</label>
        <input class="input-field" type="text" id="username" name="username" required>
        <br>

        <label for="password">Password:</label>
        <input class="input-field" type="password" id="password" name="password" required>
        <br>

        <button id="submitButton" class="submit-button" type="submit">
            Login
        </button>
    </form>

    <br>
    <a class="link-text" href="/register">Click here to signup!</a>
    <br>
    <a class="link-text" href="/">Back to Home</a>
</div>
