<div class="container">
  <h1>NYC Arrest Records</h1>
  
  <div class="filter-links">
    <a href="/arrests/filter">Filter Arrests</a> |
    <a href="/arrests/search">Search Arrests</a> |
    <a href="/arrests/ranking">Crime Ranking</a>
  </div>
  
  {{#if arrests}}
    {{!-- Simple Info Only at Top --}}
    <p class="total-count">
      Showing {{arrests.length}} of {{totalCount}} records 
      (Page {{currentPage}} of {{totalPages}})
    </p>
    
    {{!-- Arrests Grid --}}
    <div class="arrests-grid">
      {{#each arrests}}
        <div class="arrest-card">
          <h3>{{this.offense_description}}</h3>
          <div class="arrest-info">
            <p><strong>Date:</strong> {{this.arrest_date}}</p>
            <p><strong>Borough:</strong> {{this.borough}}</p>
            <p><strong>Precinct:</strong> {{this.precinct}}</p>
            <p><strong>Law Category:</strong> {{this.law_category}}</p>
            <p><strong>Age Group:</strong> {{this.age_group}}</p>
            <p><strong>Gender:</strong> {{this.gender}}</p>
            <p><strong>Race:</strong> {{this.race}}</p>
          </div>
          <a href="/arrests/{{this._id}}" class="details-link">View Details →</a>
        </div>
      {{/each}}
    </div>
    
    {{!-- Pagination Controls Only at Bottom --}}
    <div class="pagination">
      {{#if hasPrevPage}}
        <a href="/arrests?page=1" class="page-btn">« First</a>
        <a href="/arrests?page={{math currentPage '-' 1}}" class="page-btn">‹ Previous</a>
      {{else}}
        <span class="page-btn disabled">« First</span>
        <span class="page-btn disabled">‹ Previous</span>
      {{/if}}
      
      <span class="page-info">Page {{currentPage}} of {{totalPages}}</span>
      
      {{#if hasNextPage}}
        <a href="/arrests?page={{math currentPage '+' 1}}" class="page-btn">Next ›</a>
        <a href="/arrests?page={{totalPages}}" class="page-btn">Last »</a>
      {{else}}
        <span class="page-btn disabled">Next ›</span>
        <span class="page-btn disabled">Last »</span>
      {{/if}}
    </div>
    
  {{else}}
    <div class="no-results">
      <p>No arrest records found.</p>
      <a href="/arrests">View all arrests</a>
    </div>
  {{/if}}
</div>